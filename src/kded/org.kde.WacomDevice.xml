<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.kde.WacomDevice">
    <property name="companyID" type="s" access="read"/>
    <property name="deviceID" type="s" access="read"/>
    <property name="companyName" type="s" access="read"/>
    <property name="deviceName" type="s" access="read"/>
    <property name="deviceModel" type="s" access="read"/>
    <property name="deviceList" type="as" access="read"/>
    <property name="padName" type="s" access="read"/>
    <property name="stylusName" type="s" access="read"/>
    <property name="eraserName" type="s" access="read"/>
    <property name="cursorName" type="s" access="read"/>
    <property name="touchName" type="s" access="read"/>
    <property name="isDeviceAvailable" type="b" access="read"/>
    <property name="hasPadButtons" type="b" access="read"/>

    <method name="getAllInformation">
      <annotation name="com.trolltech.QtDBus.QtTypeName.Out0" value="Wacom::DeviceInformation"/>
      <arg type="(sssssassssssbb)" direction="out"/>
    </method>
    <method name="getInformation">
      <arg type="s" name="info" direction="in"/>
      <arg type="s" direction="out"/>
    </method>
    <method name="getDeviceName">
      <arg type="s" name="device" direction="in"/>
      <arg type="s" direction="out"/>
    </method>
    <method name="isDeviceAvailable">
      <arg type="b" direction="out"/>
    </method>
    <method name="hasPadButtons">
      <arg name="on" type="b" direction="out"/>
    </method>
    <method name="deviceList">
      <arg type="as" direction="out"/>
    </method>
    <method name="setConfiguration">
      <arg type="s" name="device" direction="in"/>
      <arg type="s" name="param" direction="in"/>
      <arg type="s" name="value" direction="in"/>
    </method>
    <method name="getConfiguration">
      <arg type="s" name="device" direction="in"/>
      <arg type="s" name="param" direction="in"/>
      <arg type="s" direction="out"/>
    </method>
  </interface>
</node>
